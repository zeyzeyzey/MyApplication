<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zeyzeyzey.myapplication.MainActivity"
    android:background="@color/deepskyblue"

    >
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="移动办公系统\nmoblie office system"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:textAlignment="center"
        android:textSize="80px"
        android:layout_marginTop="150px"

        />

    <TextView
        android:layout_width="1000px"
        android:layout_height="1200px"
        android:layout_marginTop="550px"
        android:layout_marginLeft="220px"
        android:background="@color/white"/>
    <ImageView
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_marginTop="400px"
        android:layout_marginLeft="600px"
        android:layout_marginRight="600px"
        android:src="@drawable/office"
        />

    <EditText
        android:id="@+id/username"
        android:layout_width="800px"
        android:layout_height="150px"
        android:layout_marginTop="700px"
        android:layout_marginLeft="310px"
        android:paddingLeft="20px"
        android:textSize="50px"
        android:hint="用户名："
        android:singleLine="true"
        android:background="@drawable/editstyle"
        />

    <EditText
        android:id="@+id/pwd"
        android:layout_width="800px"
        android:layout_height="150px"
        android:layout_marginTop="900px"
        android:layout_marginLeft="310px"
        android:paddingLeft="20px"
        android:textSize="50px"
        android:hint="密  码："
        android:singleLine="true"
        android:inputType="textPassword"
        android:background="@drawable/editstyle"
        />

    <Button
        android:id="@+id/button1"
        android:layout_marginTop="1100px"
        android:layout_marginBottom="200px"
        android:layout_marginLeft="310px"
        android:layout_width="800px"
        android:layout_height="150px"
        android:text="登  录"
        android:textSize="50px"
        android:textColor="@color/white"
        android:background="@color/deepskyblue"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textColor="@color/gray"
        android:textSize="50px"
        android:layout_marginTop="1300px"
        android:layout_marginLeft="700px"
        android:layout_marginRight="700px"
        />
    <Button
        android:id="@+id/finger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/finger"
        android:layout_marginTop="1400px"
        android:layout_marginLeft="630px"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/finger"
        android:text="指纹登录"
        android:textColor="@color/gray"
        android:textSize="50px"
        android:layout_marginTop="20px"
        android:textAlignment="center"
        android:layout_marginLeft="630px"
        />

</RelativeLayout>
